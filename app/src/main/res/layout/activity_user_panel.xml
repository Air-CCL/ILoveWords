<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.icecream.cc.ilovewords.UserPanelActivity"
    android:background="@drawable/bg009">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <!--头像、手机号、用户名-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="100dp"
                android:src="@drawable/touxiang"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="15dp"
                android:paddingLeft="20dp">
                <TextView
                    android:id="@+id/tv_tel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="15690868618"
                    android:textSize="20sp"
                    android:layout_marginBottom="10dp"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="icecream"
                    android:textSize="20sp"
                    android:textColor="#000000"/>
            </LinearLayout>
        </LinearLayout>

        <!--两个按钮：我的单词、词库-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center">
            <Button
                android:id="@+id/bt_myWords"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="我的单词"
                android:background="@drawable/button_circle_shape"
                android:textSize="20sp"/>
            <Button
                android:id="@+id/bt_wordDB"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="词库"
                android:background="@drawable/button_circle_shape"
                android:layout_marginTop="5dp"
                android:textSize="20sp"/>
        </LinearLayout>

        <Button
            android:id="@+id/bt_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="退 出 登 录"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:background="#FF3030"/>

    </LinearLayout>

</RelativeLayout>
